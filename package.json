{
  "name": "potter-api-challenge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "rm -rf dist/* && tsc",
    "watch": "rm -rf dist/* && tsc --w",
    "start": "node dist/app",
    "start:dev": "ts-node src/app",
    "init": "node init",
    "test": "NODE_ENV=test nyc --reporter=lcov ./node_modules/.bin/mocha -r ts-node/register ./test/**/*.ts",
    "unit-tests": "NODE_ENV=test ./node_modules/.bin/mocha -r ts-node/register ./test/unit/**/*.ts",
    "integration-tests": "NODE_ENV=test ./node_modules/.bin/mocha -r ts-node/register ./test/integration/**/*.ts",
    "lint": "eslint --ext .ts ./src",
    "docker-build": "docker build -t potter-api-challenge:latest --build-arg PORT=3000 .",
    "docker-run": "docker run -d -p 3000:3000 --rm --name potter-api-challenge --network host potter-api-challenge",
    "docker-stop": "docker stop potter-api-challenge",
    "docker-logs": "docker logs -f potter-api-challenge",
    "docker-exec": "docker exec -it potter-api-challenge bash"
  },
  "pre-commit": {
    "run": "lint, test"
  },
  "dependencies": {
    "@nestjs/common": "7.6.15",
    "@nestjs/core": "7.6.15",
    "@nestjs/platform-express": "7.6.15",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "meld": "^1.3.2",
    "minimist": "^1.2.5",
    "mongoose": "5.12.3",
    "morgan": "~1.10.0",
    "opossum": "^5.1.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.0.0",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/chai": "4.2.18",
    "@types/cors": "2.8.10",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.11",
    "@types/mocha": "8.2.2",
    "@types/morgan": "1.9.2",
    "@types/node": "15.0.2",
    "@types/opossum": "4.1.1",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "chai": "4.3.4",
    "eslint": "^7.21.0",
    "mocha": "^8.3.0",
    "mongo-unit": "^2.0.1",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  }
}
